@require "app/styles/charte"


/*
 * IDs
 */
#settings
	position: absolute
	top: 2.5em
	right: 1em
	display: flex

	/*
	 * Children
	 */
	&-btn
		margin-right: .5em
		background: transparent
		border: 0
		line-height: .75
		&::before
			content: "+"
			display: block
			font-size: 4em
			width: 1em
			height: 1em
			margin-top: .05em
			text-align: center
			transition: .4s

	&-form
		display: none

	&-input
	&-submit
		border: 0
		border-bottom: 1px solid $border-input
		font-size: 1.3em
		height: 2.5em
		padding: .5em .25em
		border-radius: 0
		background: transparent


	/*
	 * Modifiers
	 */
	&.settings--visible &
		&-form
			display: block

		&-btn
			&::before
				color: $settings-btn-color
				transform: rotate(45deg)
			&:hover::before
				color: $settings-btn-color--hover
